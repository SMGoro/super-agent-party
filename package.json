{
  "name": "super-agent-party",
  "version": "0.3.7",
  "description": "超级智能体派对v0.3.7 | 轻松链接一切!",
  "main": "main.js",
  "author": {
    "name": "Heshengtao",
    "email": "hst97@qq.com"
  },
  "license": "AGPL-3.0",
  "scripts": {
    "start": "node start.js",
    "dev": "node start.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux AppImage --x64",
    "build:mac": "electron-builder --mac --universal"
  },
  "build": {
    "appId": "com.superagent.party",
    "productName": "Super-Agent-Party",
    "copyright": "Copyright © 2025 Heshengtao",
    "asar": true,
    "compression": "maximum",
    "directories": {
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "heshengtao",
      "repo": "super-agent-party",
      "releaseType": "draft"
    },
    "files": [
      "main.js",
      "LICENSE",
      "README.md",
      "dist/",
      "static/source/",
      "static/js/preload.js",
      "static/skeleton.html",
      "static/js/shotPreload.js",
      "static/js/webview-preload.js",
      "static/shotOverlay.html",
      "static/source/icon_tray.png"
    ],
    "extraResources": [
      {
        "from": "dist/server/",
        "to": "server",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "static/source/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "createDesktopShortcut": true,
      "perMachine": false
    },
    "linux": {
      "icon": "static/source/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-${version}-Linux-x64.${ext}",
      "category": "Utility"
    },
    "mac": {
      "icon": "static/source/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "artifactName": "${productName}-${version}-Mac-${arch}.${ext}",
      "category": "public.app-category.utilities",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "dmg": {
      "icon": "static/source/icon.icns",
      "contents": [
        { "x": 380, "y": 180, "type": "link", "path": "/Applications" },
        { "x": 130, "y": 180, "type": "file" }
      ],
      "window": { "width": 540, "height": 380 }
    }
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "electron-dl": "^4.0.0",
    "electron-updater": "^6.6.2",
    "osc": "^2.4.5"
  },
  "overrides": {
    "tar": "7.5.6"
  }
}
