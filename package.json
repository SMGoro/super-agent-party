{
  "name": "super-agent-party",
  "version": "0.3.7",
  "description": "超级智能体派对v0.3.7 | 轻松链接一切!",
  "main": "main.js",
  "author": {
    "name": "Heshengtao",
    "email": "hst97@qq.com"
  },
  "license": "AGPL-3.0",
  "scripts": {
    "start": "node start.js",
    "dev": "node start.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux AppImage --x64",
    "build:mac": "electron-builder --mac --universal"
  },
  "build": {
    "appId": "com.superagent.party",
    "productName": "Super-Agent-Party",
    "copyright": "Copyright © 2025 Heshengtao",
    "asar": true,
    "compression": "maximum",
    "directories": {
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "heshengtao",
      "repo": "super-agent-party",
      "releaseType": "draft"
    },
    "files": [
      "main.js",
      "LICENSE",
      "README.md",
      "dist/",
      "static/source/",
      "static/js/preload.js",
      "static/skeleton.html",
      "static/js/shotPreload.js",
      "static/js/webview-preload.js",
      "static/shotOverlay.html",
      "static/source/icon_tray.png"
    ],
    "extraResources": [
      {
        "from": "dist/server/",
        "to": "server",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "icon": "static/source/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "artifactName": "${productName}-${version}-Linux.${ext}"
    },
    "mac": {
      "icon": "static/source/icon.icns",
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-${version}-Mac.${ext}",
      "category": "public.app-category.utilities",
      "identity": "super-agent-party",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "type": "distribution",
      "asarUnpack": "**/*.node",
      "extendInfo": {
        "NSRequiresAquaSystemAppearance": false
      },
      "provisioningProfile": null
    },
    "dmg": {
      "icon": "static/source/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 180,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "icon": "static/source/icon.png",
      "verifyUpdateCodeSignature": false,
      "target": [
        "nsis"
      ],
      "publisherName": "Heshengtao",
      "rfc3161TimeStampServer": "http://timestamp.digicert.com"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "uninstallDisplayName": "${productName}",
      "createDesktopShortcut": true,
      "differentialPackage": true,
      "perMachine": false 
    }
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "electron-dl": "^4.0.0",
    "electron-updater": "^6.6.2",
    "osc": "^2.4.5"
  }
}
